<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/MyVersion_2_backgroud"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/accident_text"
        android:textColor="@color/white"
        android:gravity="center"
        android:scaleX="1.6"
        android:textSize="20dp"

        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="@dimen/line_margin"
    android:paddingRight="100dp"
    >
    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="出风口温探故障"
        android:layout_marginLeft="20dp"
        android:paddingTop="@dimen/padding_top"
        android:background="@color/background_green"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20dp"
        android:scaleX="1.1"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="PM2.5传感器故障"
        android:paddingTop="@dimen/padding_top"
        android:layout_marginLeft="@dimen/deal_with"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:scaleX="1.1"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="@dimen/line_margin"
        android:paddingRight="80dp"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="室外温探故障"
            android:paddingTop="@dimen/padding_top"
            android:background="@color/background_green"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:scaleX="1.1"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="甲醛传感器故障"
            android:paddingTop="@dimen/padding_top"
            android:layout_marginLeft="@dimen/deal_with"
            android:textColor="@color/white"
            android:background="@color/colorAccent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:scaleX="1.1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="@dimen/line_margin"
        android:paddingRight="80dp"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="CO2传感器故障"
            android:background="@color/background_green"
            android:paddingTop="@dimen/padding_top"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:scaleX="1.1"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/background_green"
            android:text="PTC故障"
            android:paddingTop="@dimen/padding_top"
            android:layout_marginLeft="@dimen/deal_with"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:scaleX="1.1"
            />
    </LinearLayout>

    <include
        android:id="@+id/forwarorback"
        layout="@layout/layout_forward_back"
      ></include>

</RelativeLayout>